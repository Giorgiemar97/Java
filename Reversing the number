    public class NumberUtils {
     
        public int reverseNumber(int number) {
            if (number == 0) {
                return 0;
            }
            if (number < 0) {
                return -1; // reverse of negative numbers is undefined
            }
     
            int reversedNumber = 0;
     
            while (number != 0) {
                int digit = number % 10;
                
                reversedNumber = reversedNumber * 10 + digit;
              
                number /= 10;
            }
  
            return reversedNumber;
        }
    }

