    public class FactorialCalculator {
        public int calculateFactorial(int number) {
            // If the input is negative, we return -1 as factorial is undefined for negative numbers.
            if (number < 0) {
                return -1;
            }
            
            int factorial = 1;
            
            for (int i = 2; i <= number; i++) {
                factorial *= i;
            }
            return factorial;
        }
    }
