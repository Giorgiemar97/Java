import java.util.Scanner;

public class TeaBarista {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String continueOrder = "yes";
        
        while (continueOrder.equalsIgnoreCase("yes")) {
            System.out.println("\n===== Welcome to the Tea Shop =====");
            System.out.println("What type of tea would you like?");
            System.out.println("1. Green Tea - $2");
            System.out.println("2. Black Tea - $1");
            System.out.println("3. Chamomile Tea - $3");
            System.out.print("Enter your choice (1-3): ");
            
            int teaChoice = scanner.nextInt();
            scanner.nextLine(); // consume newline
            
            String teaType = "";
            int cost = 0;
            
            switch (teaChoice) {
                case 1:
                    teaType = "Green Tea";
                    cost = 2;
                    break;
                case 2:
                    teaType = "Black Tea";
                    cost = 1;
                    break;
                case 3:
                    teaType = "Chamomile Tea";
                    cost = 3;
                    break;
                default:
                    System.out.println("Invalid choice. Please try again.");
                    continue;
            }
            
            System.out.println("\nYou've selected " + teaType + ". That will be $" + cost + ".");
            
            System.out.print("Would you like to add milk? (yes/no): ");
            String milkChoice = scanner.nextLine();
            
            System.out.println("\nThank you! Your " + teaType + 
                              (milkChoice.equalsIgnoreCase("yes") ? " with milk" : "") + 
                              " will be out momentarily.");
            
            System.out.print("\nWould you like to order another tea? (yes/no): ");
            continueOrder = scanner.nextLine();
        }
        
        System.out.println("\nThank you for visiting the Tea Shop. Have a great day!");
        scanner.close();
    }
}
