import java.util.Scanner;

public class CurrencyConverter {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Exchange rates (1 USD = ?)
        final double USD_TO_EUR = 0.93;
        final double USD_TO_INR = 83.14;

        System.out.println("Simple Currency Converter");
        System.out.println("Supported currencies: USD, EUR, INR");

        System.out.print("Enter source currency (e.g., USD): ");
        String fromCurrency = scanner.next().toUpperCase();

        System.out.print("Enter target currency (e.g., INR): ");
        String toCurrency = scanner.next().toUpperCase();

        System.out.print("Enter amount: ");
        double amount = scanner.nextDouble();

        double result = convertCurrency(fromCurrency, toCurrency, amount, USD_TO_EUR, USD_TO_INR);

        if (result >= 0) {
            System.out.printf("%.2f %s = %.2f %s\n", amount, fromCurrency, result, toCurrency);
        } else {
            System.out.println("Unsupported currency or conversion.");
        }

        scanner.close();
    }

    static double convertCurrency(String from, String to, double amount, double usdToEur, double usdToInr) {
        if (from.equals("USD")) {
            if (to.equals("EUR")) return amount * usdToEur;
            else if (to.equals("INR")) return amount * usdToInr;
        } else if (from.equals("EUR")) {
            if (to.equals("USD")) return amount / usdToEur;
            else if (to.equals("INR")) return (amount / usdToEur) * usdToInr;
        } else if (from.equals("INR")) {
            if (to.equals("USD")) return amount / usdToInr;
            else if (to.equals("EUR")) return (amount / usdToInr) * usdToEur;
        }
        return -1; // invalid conversion
    }
}
